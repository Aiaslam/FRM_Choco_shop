    <script>
        var countdown;
        var resendButton = $('#resendButtonModal'); // Cache the button element

        startTimer();

        function startTimer() {
            var time = 60;

            displayTime(time);

            countdown = setInterval(function () {
                time--;
                displayTime(time);

                if (time <= 0) {
                    clearInterval(countdown);
                    $('#otpExpiredModal').modal('show');
                    resendButton.css('display', 'block');

                    resendButton.on('click', function () {
                        $.ajax({
                            method: 'get',
                            url: "/Resendotp",
                            success: function (response) {
                                if (response.status) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Success!',
                                        text: 'OTP has been resent successfully.'
                                    });
                                    startTimer();
                                } 
                            },
                            error: function (error) {
                                console.error(error);
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Oops!',
                                    text: 'Failed to resend OTP. Please try again.'
                                });
                            }
                        });

                        $('#otpExpiredModal').modal('hide');
                    });

                    // Notify the server about OTP expiry
                    $.ajax({
                        method: 'get',
                        url: "/expiryOTP",
                        success: function (response) {
                            if (response.status) {
                                console.log('Success notifying OTP expiry.');
                            } else {
                                console.error('Failed to notify OTP expiry.');
                            }
                        }
                    });
                }
            }, 1000);
        }

        function displayTime(seconds) {
            var minutes = Math.floor(seconds / 60);
            var remainingSeconds = seconds % 60;

            remainingSeconds = remainingSeconds < 10 ? '0' + remainingSeconds : remainingSeconds;

            $('#timer').text('Time remaining: ' + minutes + ':' + remainingSeconds);
        }

        function submitForm() {
            var formData = $('#otpForm').serialize();

            $.ajax({
                type: 'POST',
                url: '/verify',
                data: formData,
                success: function (response) {
                    handleFormResponse(response);
                },
                error: function (error) {
                    console.error(error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops!',
                        text: 'Something went wrong. Please try again.'
                    });
                }
            });

            return false;
        }

        function handleFormResponse(response) {
            if (response.status) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Account verification successful.'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/home';
                    }
                });
             } 
            // else {
            //     Swal.fire({
            //         icon: 'error',
            //         title: 'Oops!',
            //         text: response.error || 'Account verification failed. Please try again.'
            //     });
            // }
        }
