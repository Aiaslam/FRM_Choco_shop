    <script>
        function addTocart(id) {
            console.log('Product ID:', id);
            console.log('Request URL:', `/addToCart?id=${id}`);
            
            $.ajax({
                url: `/addToCart?id=${id}`,
                method: "get",
                success: (response) => {
                    if (response.status) {
                        Swal.fire({
                            title: 'ADD TO CART',
                            text: 'Product Added to cart',
                            icon: 'success',
                            timer: 1000,
                            showConfirmButton: false, // This removes the button
                        });
                    } else {
                        alert('error');
                    }
                }
            });
        }
     
        function addToCart(id) {
            console.log('Product ID:', id);
            $.ajax({
                
                url: `/addToCart?id=${id}`,
                
                method: "get",
                success: (response) => {
                    if (response.status) {
                        if (response.inCart) {
                            // Product already in cart, increment the quantity
                            Swal.fire({
                                title: 'ADD TO CART',
                                text: 'Product quantity incremented in cart',
                                icon: 'success',
                                timer: 1000,
                                showConfirmButton: false, // This removes the button
                            });
                        } else {
                            // Product added to cart
                            Swal.fire({
                                title: 'ADD TO CART',
                                text: 'Product Added to cart',
                                icon: 'success',
                                timer: 1000,
                                showConfirmButton: false, // This removes the button
                            });
                        }
                    } else {
                        alert('error');
                    }
                }
            });
        }
     </script>
