    <script>
        $(document).ready(function () {
            // Handle form submission when "Add Money" button is clicked
            $("#addMoneyButton").click(function () {
                console.log('inside onclick of add money botton');
                var amount = $("#moneyAmount").val(); // Get the entered amount

                if (amount.trim() === "") {
                    alert("Please enter a valid amount.");
                    return;
                }
                console.log('outside the if condition trim');
                $("#addMoneyModal").modal("hide");
                $("#walletBalance").text("₹" + amount);

                   console.log('going to ajax for adding money');
                $.ajax({
                    url: "/addMoneyWallet",
                    method: "POST",
                    data: {
                        amount: amount
                    },
                    success: (response) => {

                             
                        if (response.status) {
                            console.log('inside response.status',response.status);

                            var razorpayApiKey = 'rzp_test_k4rLPZE8yELGs7';

                            // Calculate the amount dynamically based on the total order amount (in paise)
                            var orderAmount = Math.round(amount * 100);

                                  console.log('before opyion');
                            // Define the Razorpay options
                            var options = {
                                "key": "rzp_test_k4rLPZE8yELGs7",
                                "amount": orderAmount, // Dynamically calculated amount
                                "currency": "INR",
                                "name": "Evara",
                                "description": "Add money to wallet",
                                "order_id": response.razorpayOrder.id, // Replace with actual order ID
                                "handler": function (response) {
                                    console.log(response);

                                    verifyPayment(response);


                                },

                                "prefill": {
                                    "name": "Customer Name", // Set to the customer's name
                                    "email": "customer@example.com", // Set to the customer's email
                                    "contact": "9000090000" // Set to the customer's contact number
                                },
                                "callback_url": "/your-server-callback-url", // Replace with your server's callback URL
                                "theme": {
                                    "color": "#3399cc"
                                }
                            };

                            // Create a new Razorpay instance and open the payment dialog
                            var rzp1 = new Razorpay(options);

                            rzp1.open();









                        }
                        else {
                            Swal.fire({
                                title: 'Error Occured',
                                text: "Can't process order error occured",
                                icon: 'fail',
                                timer: 5000
                            })

                        }
                    }
                })
                function verifyPayment(response) {
                    console.log('inside verifypayment');

                    $.ajax({
                        url: '/verifyPayment',
                        method: 'post',
                        data: {
                            razorpay_order_id: response.razorpay_order_id,
                            razorpay_payment_id: response.razorpay_payment_id,
                            razorpay_signature: response.razorpay_signature
                        },
                        success: (response) => {
                            if (response.status) {


                                $.ajax({
                                    url: "/updateMongoWallet",
                                    method: "post",
                                    data: {
                                        amount: amount,

                                    },
                                    success: (response) => {
                                        if (response.status) {
                                            Swal.fire({
                                                title: "Added success",
                                                text: "Add Moneney successfully",
                                                icon: "success",
                                                showConfirmButton: false,
                                                timer: 2000,

                                            })
                                            location.reload()
                                        }
                                    }
                                })








                            } else {
                                alert("Payment failed!" + response.errMsg)
                            }
                        }
                    })
                }
            }
            )
        })








    </script>








