        <script>

            document.getElementById('filterChart').addEventListener('change', function () {
                const selectedValue = this.value;
                switch (selectedValue) {
                    case 'today':
                        window.location.href = '/admin/graphReport?date=today';
                        break;
                    case 'week':
                        window.location.href = '/admin/graphReport?date=week';
                        break;
                    case 'month':
                        window.location.href = '/admin/graphReport?date=month';
                        break;
                    case 'year':
                        window.location.href = '/admin/graphReport?date=year';
                        break;
                        
                    default:
                        window.location.href = '/admin/graphReport?date=all';
                }
            });
