<%- include('header')  %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <p>Lorem ipsum dolor sit amet.</p>
                </div>
                <div>
                  
                    <a href="/admin/newUser" class="btn btn-primary btn-sm rounded">Add new User</a>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card mb-4">
                    <header class="card-header">
                        <div class="row align-items-center">
                            <div class="col col-check flex-grow-0">
                                <div class="form-check ms-2">
                                    <input class="form-check-input" type="checkbox" value="">
                                </div>
                            </div>
                            <div class="col-md-4 col-8">
                                <h5 class="card-title">User List</h5> <!-- Change this title as needed -->
                            </div>
                            <div class="col-md-2 col-6">
                                <select class="form-select">
                                    <option selected>Status</option>
                                    <option>Active</option>
                                    <option>Disabled</option>
                                    <option>Show all</option>
                                </select>
                            </div>
                        </div>
                    </header>
                    <!-- ... (rest of the card body and columns) -->
                </div>
                
                <!-- card-header end// -->
                <div class="card-body">
                    <% users.forEach(user => { %>
                        <article class="itemlist">
                            <div class="row align-items-center">
                                <div class="col col-check flex-grow-0">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="">
                                    </div>
                                </div>
                                <div class="col-lg-4 col-sm-4 col-12 flex-grow-1 col-name">
                                    <a class="itemside" href="#">
                                        <!-- <div class="left">
                                            <img src="assets/imgs/items/3.jpg" class="img-sm img-thumbnail" alt="Item">
                                        </div> -->
                                        <div class="info">
                                            <h6 class="mb-0"><%= user.username %></h6>
                                            <h6 class="mb-0 text-muted"><%= user.email %></h6>
                                            <h6 class="mb-0 text-muted"><%= user.mobile %></h6>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-status">
                                    <%if(user.isBlocked){ %>
                                        <span class="badge rounded-pill alert-success"><%= user.isActive %></span>
                                        <% } else { %>
                                        <span class="badge rounded-pill alert-danger"><%= user.isActive %></span>

                                            <% } %>

                                </div>
                                <% if (user.isBlocked) { %>
                                    <div class="col-lg-1 col-sm-2 col-4 col-action text-end">
                                        <a href="/admin/unBlockUser?id=<%= user._id %>" class="btn btn-sm font-sm btn-light rounded">
                                            <i class="material-icons md-delete_forever"></i> Unblock
                                        </a>
                                    </div>
                                <% } else { %>
                                    <div class="col-lg-1 col-sm-2 col-4 col-action text-end">
                                        <a href="/admin/blockUser?id=<%= user._id %>" class="btn btn-sm font-sm btn-light rounded">
                                            <i class="material-icons md-delete_forever"></i> Block
                                        </a>
                                    </div>
                                <% } %> 
                                
                                <!-- <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                    <a href="#" class="btn btn-sm font-sm rounded btn-dark">
                                        Block
                                    </a> -->
                                </div>
                            </div> <!-- row .// -->
                        </article>
                        
                
                    <% }); %>
                  </div>
                  
               
            </div> <!-- card end// -->
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
            
        </section> <!-- content-main end// -->
        <%- include('footer')  %>



